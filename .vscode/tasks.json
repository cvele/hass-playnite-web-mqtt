{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint with Flake8",
      "type": "shell",
      "command": "flake8 playnite_web_mqtt/",
      "group": "test",
      "problemMatcher": ["$flake8"]
    },
    {
      "label": "Check formatting with Black",
      "type": "shell",
      "command": "black --check playnite_web_mqtt/",
      "group": "test"
    },
    {
      "label": "Security check with Bandit",
      "type": "shell",
      "command": "bandit -r playnite_web_mqtt/",
      "group": "test"
    },
    {
      "label": "Install Production Dependencies",
      "type": "shell",
      "command": "pip install -r requirements.txt",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Install Development Dependencies",
      "type": "shell",
      "command": "pip install -r requirements-dev.txt",
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    }
  ]
}
